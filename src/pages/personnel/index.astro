---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const personnel = await getCollection('personal');
---

<Layout title="LAPD Personnel">
    <main class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900/20 to-slate-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-4xl font-bold bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent mb-4">
                    ðŸ‘® LAPD Personnel Database
                </h1>
                <p class="text-cyan-200/80">
                    Total Personnel: <span class="text-cyan-400 font-bold">{personnel.length}</span>
                </p>
            </div>

            <!-- Personnel Table -->
            <div class="bg-slate-800/30 border border-cyan-400/20 rounded-xl overflow-hidden">
                <!-- Table Header -->
                <div class="bg-slate-700/50 border-b border-cyan-400/30 p-4">
                    <div class="grid grid-cols-6 gap-4 text-sm font-medium text-cyan-300">
                        <div>ID</div>
                        <div>Name</div>
                        <div>Rank</div>
                        <div>Department</div>
                        <div>Status</div>
                        <div>Joined</div>
                    </div>
                </div>

                <!-- Table Body -->
                <div class="divide-y divide-cyan-400/10">
                    {personnel && personnel.sort((a, b) => a.data.name.localeCompare(b.data.name)).map((officer) => (
                        <div class="p-4 hover:bg-slate-700/30 transition-all duration-200 group">
                            <div class="grid grid-cols-6 gap-4 items-center">
                                <div>
                                    <a href={`/personal/${officer.data.matriculation_number}`} 
                                       class="text-cyan-400 hover:text-cyan-300 font-mono font-medium group-hover:underline transition-all duration-200">
                                        #{officer.data.matriculation_number}
                                    </a>
                                </div>
                                <div class="text-cyan-100 font-medium">{officer.data.name}</div>
                                <div class="text-cyan-200/80">{officer.data.rank}</div>
                                <div class="text-cyan-200/80">{officer.data.department}</div>
                                <div>
                                    <span class={`px-3 py-1 rounded-full text-xs font-medium ${
                                        officer.data.status === 'active' 
                                            ? 'bg-green-400/20 text-green-300 border border-green-400/30' 
                                            : 'bg-red-400/20 text-red-300 border border-red-400/30'
                                    }`}>
                                        {officer.data.status}
                                    </span>
                                </div>
                                <div class="text-cyan-200/80">{officer.data.joined_on}</div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-slate-800/50 border border-green-400/30 rounded-lg p-4">
                    <div class="flex items-center justify-between">
                        <span class="text-green-300/70 text-sm">Active Personnel</span>
                        <span class="text-2xl font-bold text-green-400">
                            {personnel.filter(p => p.data.status === 'active').length}
                        </span>
                    </div>
                </div>
                <div class="bg-slate-800/50 border border-red-400/30 rounded-lg p-4">
                    <div class="flex items-center justify-between">
                        <span class="text-red-300/70 text-sm">Inactive Personnel</span>
                        <span class="text-2xl font-bold text-red-400">
                            {personnel.filter(p => p.data.status === 'inactive').length}
                        </span>
                    </div>
                </div>
                <div class="bg-slate-800/50 border border-cyan-400/30 rounded-lg p-4">
                    <div class="flex items-center justify-between">
                        <span class="text-cyan-300/70 text-sm">Total Personnel</span>
                        <span class="text-2xl font-bold text-cyan-400">{personnel.length}</span>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout> 